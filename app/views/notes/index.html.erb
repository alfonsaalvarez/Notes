<%= javascript_include_tag 'application'%>
<%= csrf_meta_tag %>
<!-- No quitar!! -->

<div class="wrapper_with_padding">
  <div class="clearfix" id="notes">
	<p id="notice"><%= notice %></p>

	<h1>Notes</h1>

	<table>
	  <thead>
	    <tr>
	      <th>Title</th>
	      <th>Text</th>
	      <th>User</th>
	      <th colspan="4"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @notes.each do |note| %>
        <% if session[:user_id] == note.user_id %>
          <tr>
		          <td><%= note.title %></td>
		          <td><%= note.text %></td>
		          <td><%= note.user.name %></td>
		          <td><%= link_to 'Show', note, class: "button"  %></td>
		          <td><%= link_to 'Edit', edit_note_path(note), class: "button"  %></td>
		          <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, class: "button"  %></td>
	        </tr>
        <% end %>
      <% end %>
	  </tbody>
	</table>

	<br>

	<%= link_to 'New Note', new_note_path, class: "button"  %>
  </div>
</div>
