<%= form_with(model: note_collection, local: true) do |form| %>
  <% if note_collection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note_collection.errors.count, "error") %> prohibited this note_collection from being saved:</h2>

      <ul>
      <% note_collection.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id %>
  </div>

  <div class="field">
	<div class="col-xs-12 col-sm-6 col-md-4">
	<% if Note.all.any? %>
	    <% Note.all.each do |note| %>
	    <% if session[:user_id] == note.user_id %>
	      	<div class="note">
		  <table>
		    <tr>
			<td><%= note.title %></td>
			<td><%= link_to '', note, class:"fas fa-plus fa-2x" %></td>

		    </tr>
		   </table>
		  </div>
	  	
	   <% end %>
    	<% end %>
	<% else %>
	    <div class="row">
	    	<h2>Add a new note</h2>
	    </div>
	    <div class="row">
	    	<p>It seems that you haven't created any note. Would you like to?</p>
		<%= link_to "New Note", new_note_path, class: "button" %>
	    </div>
    <% end %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Save", class: "button"%>
    <%= link_to 'Back', note_collections_path, class: "button"  %>
  </div>
<% end %>
