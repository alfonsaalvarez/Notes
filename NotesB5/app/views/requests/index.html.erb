<p id="notice"><%= notice %></p>

<h1>Resquests</h1>
     
<div class="col-xs-12 col-sm-6 col-md-4">
<div class="clearfix" id="notes">
  <% if @requests.any? %>
      <% @requests.each do |requests| %>
     <% if requests.user2 == session[:user] %> <!-- Que compruebe friends.user1.id con algÃºn metodo -->
        <div class="friendships">
      <table>
          <tr>
      <td><%= requests.user1 %></td>
      <td><%= link_to '',  new_friendship_path(user1: requests.user1, user2: requests.user2), method: "get", class:"fas fa-plus fa-2x" %></td>
       <td><%= link_to '', requests, method: :delete, data: { confirm: 'Are you sure?' }, class: "fas fa-trash-alt fa-2x" %></td>
      </tr>
        </table>
        </div>
    <% end %>
      <% end %>
    <%else%>
    <th>You do not have any friendships</th>
    <%end%>
  
  </div>
</div>


