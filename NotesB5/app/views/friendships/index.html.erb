<%= javascript_include_tag 'application'%>
<%= csrf_meta_tag %>
<!-- No quitar!! -->

<h1>New Friends</h1>



  <tbody>
<% if @friendships.any? %>
<table>
  <thead>
    <tr>
      <th>Name</th>
   
      <th colspan="3"></th>
    </tr>
  </thead>
    <% @friendships.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Add', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %></td>
      </tr>
    <% end %>
    <%else%>
        <th>You do not have any friendships</th>
    <%end%>
  </tbody>
</table>

<br>